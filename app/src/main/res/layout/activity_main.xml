<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/sender_section"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"/>


    <RelativeLayout
            android:id="@+id/sender_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white">

        <ImageButton
                android:id="@+id/sticker_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_sticker_zag"
                android:contentDescription="@null"/>

        <EditText
                android:id="@+id/editText"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/sticker_btn"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="message"
                android:nextFocusLeft="@id/editText"
                android:nextFocusUp="@id/editText"
                android:textSize="16dp"/>

    </RelativeLayout>


